{
    "extends": "../tsconfig.node.json",
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "../",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@foundation": [
                "../src/foundation"
            ],
            "@core": [
                "../src/core"
            ],
            "@core-rtti": [
                "../src/core/rtti"
            ],
            "@foundation-errors": [
                "../src/foundation/errors"
            ],
            "@foundation-threading": [
                "../src/foundation/threading"
            ],
            "@foundation-types": [
                "../src/foundation/types"
            ],
            "@test-helpers": [
                "../test/helpers"
            ]
        },
    },
    "include": [
        "**/*.spec.ts",
        "**/test/**.ts"
    ]
}
