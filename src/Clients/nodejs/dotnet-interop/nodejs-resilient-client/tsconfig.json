{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",
        "declaration": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "ES2018"
        ],
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
