{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "ES2018"
        ],
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "paths": {
            "@foundation": [
                "src/foundation"
            ],
            "@core": [
                "src/core"
            ],
            "@core-rtti": [
                "src/core/rtti"
            ],
            "@foundation-errors": [
                "src/foundation/errors"
            ],
            "@foundation-threading": [
                "src/foundation/threading"
            ],
            "@foundation-types": [
                "src/foundation/types"
            ],
            "@test-helpers": [
                "test/helpers"
            ]
        },
        "strict": true,
        "strictNullChecks": true,
        "stripInternal": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
