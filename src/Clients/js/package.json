{
    "name": "coreipc",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run clean & npm run build:webpack & npm run build:obj",
        "build:webpack": "webpack --config webpack.dev.js",
        "build:obj": "npm run build:obj:src & npm run build:obj:test",
        "build:obj:src": "tsc",
        "build:obj:test": "npm run clean:obj:test & tsc -p tsconfig.test.json & npm run build:obj:dotnet",
        "build:obj:dotnet": "npm run clean:obj:dotnet & tsc -p tsconfig.dotnet.json",
        "clean": "rimraf ./dist/**/*",
        "clean:obj:test": "rimraf ./dist/obj/test/**/*",
        "clean:obj:dotnet": "rimraf ./dist/obj/dotnet/**/*",
        "clean:coverage:node": "rimraf ./coverage/node/**/*",
        "clean:coverage:web": "rimraf ./coverage/web/**/*",
        "test": "npm run test:node & npm run test:web",
        "test:node": "npm run clean:coverage:node & nyc ts-mocha test/node/**/*.test.ts",
        "test:web": "npm run start-websocket-server & npm run build:obj:test & npm run clean:coverage:web & npm run start:test:web",
        "test:web2": "npm run build:obj:test & node ./dist/obj/dotnet/test/dotnet/index.js host --websocket-url ws://localhost:1234",
        "start:test:web": "karma start --single-run --browsers Chrome & npm run stop-websocket-server",
        "start-websocket-server": "node ./dist/obj/dotnet/test/dotnet/index.js --start",
        "stop-websocket-server": "node ./dist/obj/dotnet/test/dotnet/index.js --stop"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eduard-dumitru/js-multitargeting.git"
    },
