{
    "compilerOptions": {
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "stripInternal": true,
        "lib": [
            "es2015"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
